<%= form_tag(:action => 'device_group_create', :id => @user.id) do %>

    <%= b_user + _('User') + ": " + @user.first_name + " " + @user.last_name %>
    <br><br>
    <%= b_groups + _('Group') %>: <%= text_field 'devicegroup', 'name', "class" => "input" %>
    <br><br>
    <%= _('Created') + ": " + nice_date_time(@devicegroup.added) %>
    <br><br><br>



    <table width="50%" class="simple">

      <tr>
        <td colspan="2" class="bottom_border">
          <b><%= _('Address') %></b>
        </td>
      </tr>
      <tr>
        <td height="10"></td>
      </tr>

      <%= render 'address_form', user: @user, countries: @countries,
                                 default_country_id: @default_country_id,
                                 disallow_email_editing: @disallow_email_editing %>

    </table>

    <br>
    <%= submit_tag _('Create'), data: { disable_with: _('Processing..') } %>
<% end %>

<br>
