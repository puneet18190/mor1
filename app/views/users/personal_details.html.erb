<%= form_tag(:action => 'update_personal_details', :id => @user) do %>
    <%= render 'personal_form', user: @user, devices: @devices, countries: @countries,
                                total_recordings_size: @total_recordings_size, i: @i,
                                disallow_email_editing: @disallow_email_editing,
                                default_country_id: @default_country_id,
                                search_user: @search_user,
                                search_user_id: @search_user_id,
                                devices: @devices,
                                search_device: @search_device %>
    <br>
    <br>
    <% if !(user? and Confline.get_value("Disallow_Details_Editing", @user.owner_id).to_i == 1) %>
      <%= submit_tag _('Change'), data: { disable_with: _('Processing..') } %>
    <% end %>
<% end %>
<br>
