<% unless @direction || @table_title %>
    <br><br><br>
    <div class="nb" align="center">
      <%= b_exclamation + _('There_is_no_such_prefix_in_db') %>: <%= @prefix %>
    </div>
<% end %>

<table width="100%">
  <tr>
    <td align="center">
      <table width="90%">
        <tr>
          <td align="left">
            <div class="nb">
              <% if @direction %>
              <b><%= draw_flag(@direction.code) %> <%= @direction.name %> <%= @prefix ? @prefix.to_s : '' %></b>
              <% elsif @table_title %>
              <b><%= @table_title %></b>
              <% end %>
            </div>
            <br>
            <table class="maintable" width="100%">
              <% i = 0 %>
              <% if @res.size > 0 %>
                  <% for r in @res %>
                      <tr class="row<%= (i % 2 + 1).to_s %>">
                        <td>
                          <%= r['prefix'].to_s %>
                        </td>
                        <td>
                          <%= r['name'].to_s %>
                        </td>
                        <% i += 1 %>
                      </tr>
                  <% end %>
              <% else %>
              <tr class="row1">
                <td><%= _('No_result') %></td>
              </tr>
              <% end %>
            </table>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
<br/>
<br/>