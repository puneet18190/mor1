<b><%= b_view + _('Tariff') %>
  :</b> <%= link_to @tariff.name, :action => "rates_list", :id => @tariff.id, :st => @destination.direction.try(:name).to_s[0, 1] %>
<br/>
<b><%= b_currency + _('Currency') %>:</b> <%= @tariff.currency %>
<br/>
<%= draw_flag @destination.direction.try(:code).to_s %> <%= @destination.direction.try(:name).to_s %>
<%= @rate.prefix %>
<br/>
<b><%= b_date + _('Day_type') %>
  :</b> <%= _('Free_day') if @ratedetail.daytype == "FD" %><%= _('Work_day') if @ratedetail.daytype == "WD" %><%= _('Work_day_and_Free_day') if @ratedetail.daytype == "" %>
<hr/>
<%= form_tag(:action => 'ratedetail_update', :id => @ratedetail) do %>
    <%= render 'ratedetail_form', etedit: @etedit, ratedetail: @ratedetail %>
    <%= submit_tag _('Edit'), data: { disable_with: _('Processing..') } %>
<% end %>
<br/><br/>
