<% if @dirs != nil %>
    <ul>
      <% for dir in @dirs do %>
          <% dst = Destination.where("direction_code = '#{dir.code}'").order("LENGTH(prefix)").first %>
          <% if dst %>
              <li><%= draw_flag(dst.direction_code) %> <%= dir.name %> - <%= dst.prefix %></li>
          <% end %>
      <% end %>
    </ul>
<% end %>