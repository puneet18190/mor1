<% if @enabled == 1 %>
    <div align="right">
      <%= image_tag('/images/logo/paysera_logo.png', style: 'border-style:none', title: 'Paysera') %>
    </div>

    <% if @show_gateways %>
        <%= raw b_info + _('payment_gateway_restriction') %>
        <br/><br/>
    <% end %>

    <%= form_tag(Paysera::Request.build_request(@paysera_request_params, @sign_password)) do %>
        <%= _('Please_press_here_to_pay') %>* <%= nice_number @amount %> <%= @currency %>
        <br><br>
        <%= submit_tag _('Pay'), data: {disable_with: _('Processing..')} %>
        <br>
        <br>
        <div class="simple">
          *<%= _('Total_amount_to_pay_with_TAX') %>: <%= nice_number @amount_with_vat %> <%= @currency %>
        </div>
    <% end %>
<% else %>
    <%= _('Paysera_disabled') %>
<% end %>







