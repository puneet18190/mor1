<% if @enabled == 1 %>
    <div align="right">
      <%= image_tag('/images/logo/paysera_logo.png', style: 'border-style:none', title: 'Paysera') %>
    </div>

    <% if @show_gateways %>
        <%= raw b_info + _('payment_gateway_restriction') %>
        <br/><br/>
    <% end %>

    <%= form_tag action: :paysera_pay do %>
        <%= _('Please_enter_amount_to_update_your_balance') %>*: <%= text_field_tag 'amount', @default_amount, class: 'input', size: 8, maxlength: 8 %> <%= @currency %>
        <br><br>
        <%= submit_tag _('Confirm'), data: {disable_with: _('Processing..')} %>
    <% end %>

    <br/>
    <div class="simple">
      *<%= _('Minimum_amount') %>: <%= nice_number @min_amount %> <%= @currency %>
    </div>
<% else %>
    <%= _('Paysera_disabled') %>
<% end %>